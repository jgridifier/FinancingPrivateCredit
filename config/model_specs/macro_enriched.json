{
  "name": "macro_enriched",
  "description": "APLR model with macro factors (credit spreads, financial conditions)",
  "target": "provision_rate",
  "ar_lags": [1, 2, 4],
  "exogenous_vars": ["lis", "loan_growth_yoy", "nfci", "hy_spread"],
  "exogenous_lags": {
    "lis": [4, 8],
    "nfci": [1, 2],
    "hy_spread": [1, 2, 4]
  },
  "include_seasonality": true,
  "seasonality_period": 4,
  "max_bins": 12,
  "min_observations_in_split": 5,
  "max_interaction_level": 1,
  "holdout_periods": 4,
  "bank_fixed_effects": false
}
